<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_fooOrderView_top_name"
        android:text="菜名"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_fooOrderView_top_price"
        android:text="价格"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_fooOrderView_top_name"
        android:layout_alignTop="@+id/tv_fooOrderView_top_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_fooOrderView_top_number"
        android:text="数量"
        android:layout_below="@+id/tv_fooOrderView_top_name"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tv_fooOrderView_top_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_fooOrderView_top_declare"
        android:text="备注"
        android:layout_toRightOf="@+id/tv_fooOrderView_top_number"
        android:layout_alignBottom="@+id/tv_fooOrderView_top_number"
        android:layout_marginLeft="10dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="提交订单"
        android:id="@+id/bt_foodOrderView_top_button"/>

</RelativeLayout>