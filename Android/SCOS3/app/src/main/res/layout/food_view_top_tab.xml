<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAllTheme">

    <LinearLayout
        android:id="@+id/id_switch_foodview_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
        android:paddingBottom="5px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_footView_tab_item1"
            android:layout_weight="1"
            android:text="冷菜"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_footView_tab_item2"
            android:layout_weight="1"
            android:text="热菜"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_footView_tab_item3"
            android:layout_weight="1"
            android:text="海鲜"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_footView_tab_item4"
            android:layout_weight="1"
            android:text="酒水"
            android:textAlignment="center"/>
    </LinearLayout>

</LinearLayout>